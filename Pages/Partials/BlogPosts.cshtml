@model List<PortfolioPage.DTOs.PostDto>
@inject IImageService ImageService


<div class="row">

    @foreach (var post in Model)
    {
        <div class="col-12 col-md-4 col-lg-12 col-xl-4 mb-3 ">
            <div class="card shadow-sm rounded-0 bg-light h-100">
                <img src="@ImageService.ConvertToFile(post.ImageData, post.ContentType)" style="object-fit: cover;" class="card-img-top overflow-hidden rounded-0" alt="@post.Title image">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title fw-bolder border-primary border-bottom d-inline-block text-center">@post.Title</h5>
                        <div class="card-text mt-3">
                            <p>@post.Abstract</p>
                        </div>
                    </div>
                    <div class="card-link">
                        <a class="text-secondary fw-bolder" href=@($"https://localhost:44380/BlogPosts/UrlFriendly/{post.Slug}") target="_blank">View Details</a>
                    </div>
                </div>
                <div class="card-footer d-flex">
                    <small class="text-muted fw-bolder">
                        <span class="fw-bolder">Date:</span> @post.Created.ToString("dd MMMMM yyyy")
                    </small>
                </div>
            </div>
        </div>
    }
</div>