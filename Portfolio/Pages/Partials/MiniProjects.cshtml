<div class="row">

    @foreach (var project in ProjectsData.ProjectsList.Where(project => project.IsMainProject == false))
    {
        <div class="col-12 col-md-4 col-lg-6 col-xl-4 mb-3">

            <div class="card shadow-sm rounded-0 bg-light overflow-hidden h-100">
                <img src="@project.CardImage" class="card-img rounded-0" alt="@project.Title card image">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title fw-bolder border-primary border-bottom d-inline-block text-center">@project.Title</h5>
                        <div class="card-text mt-3">
                            @Html.Raw(project.Abstract)
                        </div>
                    </div>
                    <div class="card-link">
                        <a class="text-secondary fw-bolder" href="#" data-bs-toggle="modal" data-bs-target="#modal-@project.Id">View Details</a>
                    </div>
                </div>
                <div class="card-footer d-flex">
                    <small class="text-muted fw-bolder"> <span class="fw-bolder">Date:</span> @project.Date.ToString("dd MMMMM yyyy")</small>
                </div>
            </div>
        </div>
    }
</div>

