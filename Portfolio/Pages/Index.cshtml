@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section id="about-me-section" class=" px-4 pt-3 pb-5 p-lg-5">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-7 col-md-6 col-sm-5">
                <h1 class="fw-bold">Pawel Slugocki</h1>
                <p class="lead">Backend focused Full Stack .NET Developer</p>
                <p class="mb-1">
                    I'm a software engineer specialized in building custom Web applications using C# .NET Core framework. I write about software development on <a href="#" class="text-secondary fw-bolder">my blog</a>.
                </p>
                <p class="">Feel free to check my project <a href="#" class="fw-bolder text-secondary">portfolio</a> and <a href="#" class= "text-secondary fw-bolder">online resume</a>.</p>

                <div class="col-12 d-flex flex-wrap">
                    <button class="btn btn-primary fw-bolder mt-2 me-3 text-light"> <i class="fas fa-arrow-alt-circle-right me-1"></i> View Portfolio</button>
                    <button class="btn btn-dark fw-bolder mt-2"> <i class="fas fa-portrait me-2"></i> View Resume</button>
                </div>
            </div>

            <div class="col-12 col-lg-5 col-md-6 col-sm-7 mt-4 mt-sm-0 d-xxl-flex justify-content-xxl-end align-content-xxl-center ">
                <img id="profile-pic" class="img-fluid" src="images/profile-lg.jpg"/>
            </div>
        </div>
    </div>
</section>

<section id="tech-section" class="px-4 pt-3 pb-5 p-lg-5">
