@page
@model Portfolio.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<section id="contact-section" class="">
    <div class="container-fluid">
        <div class="container px-4 pt-3 pb-3 pt-lg-5">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="fw-bold">Contact</h1>
                    <p class="lead">If you are interested in hiring me- please fill in the contact form below or send me an email to <a href="mailto:slugocki.pawel@gmail.com" class="fw-bolder text-secondary">slugocki.pawel@gmail.com</a></p>
                    <p class="mt-5 text-primary fw-bolder mb-5">Currently I am available for work</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="fw-bold mt-3">Get In Touch</h1>
            </div>

            <div class="col px-5 mx-lg-5">
                <form id="contact-form" method="post" class="row">
                    <div class="col-md-6 col-12 mt-3 ">
                        <input class="form-control" type="text" placeholder="Name" name="name" minlength="2" required/>
                    </div>

                    <div class="col-md-6 col-12 mt-3">
                        <input class="form-control" type="email" placeholder="Email" name="email" minlength="2" required/>
                    </div>

                    <div class="col-12 mt-3">
                        <input class="form-control" type="text" placeholder="Subject" name="subject" minlength="4" required/>
                    </div>



                    <div class="col-12 mt-3 h-75">
                        <textarea  class="form-control" type="text" placeholder="Message" name="message" minlength="10" required></textarea>
                    </div>

                    <div class="col-12 mt-3">
                        <button class="btn btn-primary text-light px-4 py-2" id="sendMessageButton" asp-page-handler="SendMessage" type="submit">Send Now</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
    




</section>